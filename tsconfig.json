{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["./src", "./example", "package.json"],
  "exclude": ["dist", "node_modules"],
}
